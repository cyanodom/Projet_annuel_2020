package steinerGraphJava;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.SwingUtilities;  



public class Steiner {

	private final int V_DEFAULT_SIZE = 600;
	private final int H_DEFAULT_SIZE = 400;
	
	private final int ID_GRAPH_VIEW = 0;
	private final int ID_EQUAL_VIEW = 1;
	private final int ID_CONTROL_VIEW = 2;
	private final int ID_DEFAULT_VIEW = ID_GRAPH_VIEW;
	
	private JFrame mainFrame;
	
	private SteinerModel model;
	
	public Steiner() {
		createView();
		createModel();
		placeComponents();
		createController();
	}
	
	public void createView() {
		mainFrame = new JFrame();
		mainFrame.setSize(V_DEFAULT_SIZE, H_DEFAULT_SIZE);
	}
	
	public void createModel() {
	}

	public void placeComponents() {
		JPanel p = new JPanel(); {
		}
		mainFrame.add(p);
	}
	
	public void createController() {
	}
	
	public void display() {
		refresh();
		mainFrame.pack();
		mainFrame.setLocationRelativeTo(null);
		mainFrame.setVisible(true);
	}

	private void refresh() {
	}

	public static void main(String[] args) {
		SwingUtilities.invokeLater(new Runnable() {

			@Override
			public void run() {
				new Steiner().display();
			}
			
		});
	}

}
